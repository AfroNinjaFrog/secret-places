@model SecretPlaces.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<h2>Add a new Restaurant</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label" for="City">City</label>
                <div>
                    <select asp-for="RestaurantType" asp-items="Html.GetEnumSelectList<RestaurantType>()" class="form-contcontrol dropdown"></select>
                    @Html.ValidationMessageFor(model => model.RestaurantType)
                    <span asp-validation-for="RestaurantType" class="text-danger" rows="2"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="lat" class="control-label"></label>
                <input asp-for="lat" class="form-control" />
                <span asp-validation-for="lat" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="lon" class="control-label"></label>
                <input asp-for="lon" class="form-control" />
                <span asp-validation-for="lon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsKosher" class="control-label"></label>
                <input asp-for="IsKosher" class="checkbox" />
                <span asp-validation-for="IsKosher" class="text-danger" rows="2"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
